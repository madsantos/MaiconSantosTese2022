% from https://tex.stackexchange.com/a/33765/105447
\newcommand{\gettikzxy}[3]{%
  \tikz@scan@one@point\pgfutil@firstofone#1\relax
  \edef#2{\the\pgf@x}%
  \edef#3{\the\pgf@y}%
}

% the drawing macros

\tikzset{%
  defaultdecor/.style={%
    fill=tdcolor,
    decoration = {random steps, amplitude=1pt, segment length=10pt},
    outer sep = -15pt,
